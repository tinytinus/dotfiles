set font "Ubuntu Mono Nerd Font 10"

set zoom-step 20
set default-bg "#282828"
set default-fg "#ebdbb2"

set recolor true
set recolor-darkcolor "#ebdbb2"
set recolor-lightcolor "#282828"

set statusbar-h-padding 0
set statusbar-v-padding 0
set statusbar-bg "#282828"
set statusbar-fg "#ebdbb2"

set window-title-basename true
set window-title-page true

set scroll-step 50
set scroll-hstep 50
set scroll-wrap false

set adjust-open "best-fit"
set pages-per-row 1

set database "sqlite"

map r reload
map R rotate
map i recolor
map p print
map g goto top
map G goto bottom

map h scroll left
map j scroll down
map k scroll up
map l scroll right

set index-bg "#282828"
set index-fg "#ebdbb2"
set index-active-bg "#3c3836"
set index-active-fg "#ebdbb2"

set inputbar-bg "#282828"
set inputbar-fg "#ebdbb2"

set completion-bg "#282828"
set completion-fg "#ebdbb2"
set completion-highlight-bg "#3c3836"
set completion-highlight-fg "#ebdbb2"
